{
  "name": "backend",
  "version": "1.0.0",
  "description": "GLA-React-Backend",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "server": "pm2 start server.js --name GLA-REACT",
    "start": "node server.js",
    "deploy": "cd ../frontend && yarn build && cd ../backend && yarn server",
    "dev": "concurrently \"yarn start\" \"cd ../frontend && yarn serve\"",
    "node-install": "cd ../frontend && yarn install && cd ../backend && yarn install"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "mongoose": "^6.3.0"
  }
}
